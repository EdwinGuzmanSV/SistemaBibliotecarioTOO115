<script type="text/javascript">
    $(function () {
        $("#idchk").change(function () {
            var st = this.checked;
            if (st) {
                $("#idtxt").prop("disabled", false);
                $("#idtxt1").prop("disabled", false);
                $("#idtxt2").prop("disabled", false);

            }

            else {
                $("#idtxt").prop("disabled", true);
                $("#idtxt1").prop("disabled", true);
                $("#idtxt2").prop("disabled", true);
            }


        });


    });

</script>


